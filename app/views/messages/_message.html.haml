.main_chat__message-info
  .main_chat__message-info-username
    = message.user.name
    .main_chat__message-info-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .main_chat__message
      - if message.content.present?
        %p.main_chat__message-content
          = message.content
      = image_tag message.image.url, class: 'Message__image' if message.image.present?
 